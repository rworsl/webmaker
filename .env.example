# Flask Configuration
# Generate a secure secret key using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Database Configuration
# SQLite (default)
DATABASE_URI=sqlite:///website_builder.db

# PostgreSQL (production)
# DATABASE_URI=postgresql://username:password@localhost/dbname

# MySQL (production)
# DATABASE_URI=mysql://username:password@localhost/dbname

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Application Settings
APP_NAME=DragMeHome
MAX_CONTENT_LENGTH=16777216  # 16MB max upload size

# Email Configuration (optional, for password reset)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-password

# Payment Integration (optional)
# STRIPE_PUBLIC_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# AWS S3 (optional, for file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
